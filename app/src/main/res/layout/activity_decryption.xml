<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383838"
    tools:context=".Decryption">

    <TextView
        android:id="@+id/textView"
        android:layout_width="206dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="Your Message "
        android:textColor="#efe4b0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/decryption_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/decryption_message"
        android:layout_width="276dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="650dp"
        android:gravity="center|left"
        android:paddingLeft="20dp"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="#efe4b0"
        android:textSize="18sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="395dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:text="To Decrypt the message answer the following question."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/decryption_question1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decryption_message" />

    <TextView
        android:id="@+id/decryption_question1"
        android:layout_width="276dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="21dp"
        android:gravity="start|left|bottom"
        android:paddingLeft="20dp"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="#efe4b0"
        android:textColorHint="#efe4b0"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/decryption_answer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/decryption_answer1"
        android:layout_width="276dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="Your Answer "
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:visibility="visible"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decryption_question1" />

    <TextView
        android:id="@+id/decryption_question2"
        android:layout_width="276dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="21dp"
        android:gravity="start|left|bottom"
        android:paddingLeft="20dp"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="#efe4b0"
        android:textColorHint="#efe4b0"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/decryption_answer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/decryption_answer2"
        android:layout_width="276dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="Your Answer "
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decryption_question1" />

    <TextView
        android:id="@+id/decryption_question3"
        android:layout_width="276dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="21dp"
        android:gravity="bottom|start|left"
        android:paddingLeft="20dp"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="#efe4b0"
        android:textColorHint="#efe4b0"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/decryption_answer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.507" />

    <EditText
        android:id="@+id/decryption_answer3"
        android:layout_width="276dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="Your Answer "
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decryption_question1" />

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="100dp"
        android:background="#363636"
        android:text="Submit"
        android:textColor="#efe4b0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decryption_answer1" />

    <Button
        android:id="@+id/next"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="100dp"
        android:background="#363636"
        android:text="Next"
        android:textColor="#efe4b0"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decryption_answer1" />
</androidx.constraintlayout.widget.ConstraintLayout>